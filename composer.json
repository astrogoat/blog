{
    "name": "astrogoat/blog",
    "description": "A Blog app for Strata",
    "keywords": [
        "astrogoat",
        "laravel",
        "blog"
    ],
    "homepage": "https://github.com/astrogoat/blog",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter",
            "email": "oniicoder@gmail.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.hlx.dev"
        }
    ],
    "require": {
        "php": "^8.0",
        "astrogoat/strata": "^0.3.0|^0.4.0|^0.5.0",
        "spatie/laravel-package-tools": "^1.4.3",
        "illuminate/contracts": "^8.37 || ^9.0|^10.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.3|^7.0",
        "orchestra/testbench": "^6.15|^8.5",
        "pestphp/pest": "^1.18|^2.16",
        "pestphp/pest-plugin-laravel": "^1.1|^2.2",
        "spatie/laravel-ray": "^1.23",
        "vimeo/psalm": "^4.8|^5.15"
    },
    "autoload": {
        "psr-4": {
            "Astrogoat\\Blog\\": "src",
            "Astrogoat\\Blog\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Astrogoat\\Blog\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Astrogoat\\Blog\\BlogServiceProvider"
            ],
            "aliases": {
                "Blog": "Astrogoat\\Blog\\BlogFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
